@model Requestnet.Core.Domain.InventarioEquipos

@{
    ViewData["Title"] = "Delete";
}

<div id="sidebar-nav" class="sidebar">
    <div class="sidebar-scroll">
        <nav>
            <ul class="nav">
                <li>@Html.ActionLink("Inventario", "Index", "Inventario", new object { }, new { @class = "active" })</li>
                <li>@Html.ActionLink("Novedades", "Index", "Caso")</li>
                <li>@Html.ActionLink("Proveedores", "Index", "Orden")</li>
                <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
            </ul>

        </nav>
    </div>
</div>

<div class="main">
    <div class="main-content">

        <div class="container-fluid">

            <h3 class="panel-title">Borrar componente</h3>

            <div class="mb-4">
                <a class="btnVolver" asp-action="Index">Volver</a>
            </div>
            <hr />

            <h2>¿Estás seguro de que quieres borrar esto?</h2>
            <div>

                <dl class="row">
                    <dt class="col-sm-2">Serial</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Serial)
                    </dd>
                    <dt class="col-sm-2">Cliente</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdClienteNavigation.IdCliente)
                    </dd>
                    <dt class="col-sm-2">Estado del equipo</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdEstadoeqNavigation.IdEstadoeq)
                    </dd>
                    <dt class="col-sm-2">Jefe</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdJefeNavigation.IdJefe)
                    </dd>
                    <dt class="col-sm-2">Lider</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdLiderNavigation.IdLider)
                    </dd>
                    <dt class="col-sm-2">Marca </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdMarcaNavigation.IdMarca)
                    </dd>
                    <dt class="col-sm-2">Tipo de componente</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdTipoComponenteNavigation.IdTipoComponente)
                    </dd>
                    <dt class="col-sm-2">Tipo de procedencia</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdTipoProcedenciaNavigation.IdTipoProcedencia)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdEquipo" />
                    <input type="submit" value="Borrar" class="btnBorrar" />
                </form>
            </div>

        </div>
        </div>
    </div>
